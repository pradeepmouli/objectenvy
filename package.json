{
  "name": "objectenvy-workspace",
  "version": "1.0.0",
  "description": "ObjectEnvy monorepo - strongly-typed environment configuration for TypeScript projects",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "pnpm -r build",
    "dev": "pnpm -r --parallel dev",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "lint": "pnpm -r lint",
    "format": "pnpm -r format",
    "format:check": "pnpm -r format:check",
    "type-check": "pnpm -r type-check",
    "clean": "pnpm -r clean && rm -rf dist coverage",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "pnpm build && pnpm -r --filter=objectenvy --filter=objectenvy-cli publish"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "@size-limit/preset-small-lib": "^12.0.0",
    "@typescript/native-preview": "7.0.0-dev.20260113.1",
    "@vitest/coverage-v8": "^4.0.17",
    "lint-staged": "^16.2.7",
    "oxfmt": "^0.24.0",
    "oxlint": "^1.39.0",
    "size-limit": "^12.0.0",
    "tslib": "^2.8.1",
    "tsx": "^4.21.0",
    "type-fest": "^5.4.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.17",
    "zod": "^4.3.5"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  },
  "packageManager": "pnpm@9.15.0"
}
