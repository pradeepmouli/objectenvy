{
  "name": "objectenvy-vscode",
  "displayName": "ObjectEnvy Tools",
  "description": "Convert between schemas, .env files, and TypeScript types with real-time preview",
  "version": "1.2.0",
  "publisher": "objectenvy",
  "license": "MIT",
  "icon": "icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/pradeepmouli/objectenvy"
  },
  "engines": {
    "vscode": "^1.109.0"
  },
  "categories": [
    "Programming Languages",
    "Other"
  ],
  "keywords": [
    "env",
    "dotenv",
    ".env",
    "environment",
    "typescript",
    "schema",
    "json",
    "zod",
    "types"
  ],
  "activationEvents": [
    "onLanguage:typescript",
    "onLanguage:json",
    "workspaceContains:**/.env"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "objectenvy.generateEnv",
        "title": "Generate .env from Object (envy)",
        "category": "ObjectEnvy"
      },
      {
        "command": "objectenvy.generateTypes",
        "title": "Generate Types from .env (objectify)",
        "category": "ObjectEnvy"
      },
      {
        "command": "objectenvy.quickConvert",
        "title": "Quick Convert",
        "category": "ObjectEnvy"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "when": "resourceExtname == .env",
          "command": "objectenvy.generateTypes",
          "group": "objectenvy"
        },
        {
          "when": "resourceExtname == .ts || resourceExtname == .json",
          "command": "objectenvy.generateEnv",
          "group": "objectenvy"
        }
      ]
    },
    "keybindings": [
      {
        "command": "objectenvy.quickConvert",
        "key": "ctrl+alt+e",
        "mac": "cmd+alt+e"
      }
    ],
    "configuration": {
      "title": "ObjectEnvy Tools",
      "properties": {
        "objectenvy.prefix": {
          "type": "string",
          "default": "",
          "description": "Prefix for all generated environment variables"
        },
        "objectenvy.strict": {
          "type": "boolean",
          "default": true,
          "description": "Use strict type inference mode"
        },
        "objectenvy.includeComments": {
          "type": "boolean",
          "default": true,
          "description": "Include field descriptions as comments"
        },
        "objectenvy.interfaceName": {
          "type": "string",
          "default": "Config",
          "description": "Default interface name for generated types"
        }
      }
    }
  },
  "scripts": {
    "build": "tsgo -p tsconfig.json",
    "build:native": "tsgo -p tsconfig.json",
    "dev": "tsx watch src/extension.ts",
    "type-check": "tsgo --noEmit -p tsconfig.json",
    "test": "vitest",
    "test:integration": "pnpm run build && node ./tests/integration/runTests.mjs",
    "package": "vsce package --no-dependencies",
    "publish": "vsce publish",
    "lint": "oxlint src",
    "format": "oxfmt src",
    "format:check": "oxfmt --check src",
    "clean": "rm -rf dist tsconfig.tsbuildinfo",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "devDependencies": {
    "@vscode/test-electron": "^2.5.2",
    "@types/node": "^25.3.3",
    "@types/vscode": "^1.109.0",
    "@vscode/vsce": "^3.7.1",
    "mocha": "^11.7.2",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  },
  "dependencies": {
    "objectenvy": "workspace:*",
    "ts-morph": "^27.0.2"
  }
}
